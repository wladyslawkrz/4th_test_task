generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int            @id @default(autoincrement())
  email          String         @unique
  passwordHashed String
  firstName      String?
  lastName       String?
  refreshToken   String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  userRole       Role
  meetupsCreated Meetup[]
  meetups        UserOnMeetup[]

  @@map("users")
}

model UserOnMeetup {
  userId    Int
  meetupId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meetup    Meetup   @relation(fields: [meetupId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, meetupId])
  @@map("usersOnMeetups")
}

model Meetup {
  id                Int            @id @default(autoincrement())
  meetupName        String
  meetupDescription String?
  meetingTime       DateTime
  meetingPlaceId    Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  meetupCreatorId   Int
  place             Place?         @relation(fields: [meetingPlaceId], references: [id])
  creator           User           @relation(fields: [meetupCreatorId], references: [id])
  tags              TagOnMeetup[]  
  users             UserOnMeetup[]

  @@map("meetups")
}

model TagOnMeetup {
  tagId     Int
  meetupId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meetup    Meetup   @relation(fields: [meetupId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@id([tagId, meetupId])
  @@map("tagsOnMeetups")
}

model Tag {
  id          Int           @id @default(autoincrement())
  tagName     String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  TagOnMeetup TagOnMeetup[]

  @@map("tags")
}

model Place {
  id        Int      @id @default(autoincrement())
  city      String
  street    String
  building  String
  room      Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meetups   Meetup[]

  @@map("places")
}

enum Role {
  User
  Organizer
}
